

<% if current_user != @user %>
   <p> You cannot view other users information </p>
<% else %>

<h1>NEW WORKOUT</h1>
<div class="row">

<%= form_for [@user, @workout], :html => {:class => "form-horizontal col-sm-4"} do |f| %>
<hr>
	<div class="form-group">
		<%= f.label :Description %>
		<%= f.text_field :description, :class=>"form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :Date %>
		<%= f.text_field :date, :class=>"form-control" %>
		[YYYY-MM-DD] Format only please
	</div>
 
	<div class="form-group">
		<%= f.submit "NEW WORKOUT", :class => "btn btn-primary" %>
	</div>
<% end %>
<% end %>

</div>

<%= link_to 'Back To All Workouts', user_workouts_path %>

