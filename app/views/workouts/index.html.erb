<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>

<% if current_user != @user %>
   <p> You cannot view other users information </p>
<% else %>

<%= favicon_link_tag 'favicon.ico'%>

   <h1><i>My Workouts</i></h1>
   
   <h3>
<%= link_to 'Add Workout', new_user_workout_path %>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to 'Exercise View', search_path %> 
</h3>

<% @user.workouts.order('date DESC').each do |w| %>
<br>
<h4>
   <div class="col-md-5">
   <%= w.date %>	&nbsp;&nbsp;&nbsp;	
   <%= w.description %> &nbsp;&nbsp;&nbsp;
   </div>
   <div class="col-md-7">	 
   <%= link_to 'Details', user_workout_exercises_path(params[:user_id], w.id) %>
   &nbsp;&nbsp;&nbsp;&nbsp;
   <%= link_to 'Edit Description or Date', edit_user_workout_path(params[:user_id],w.id) %>
   &nbsp;&nbsp;&nbsp;&nbsp;
   <%= link_to 'Delete Workout', user_workout_path(params[:user_id],w.id), method: :delete, data: { confirm: 'Are you sure you permanently delete this workout?'} %>
   </div>
   <br>

 

   </h4> 

<% end %>















<% end %>


</body>
</html>