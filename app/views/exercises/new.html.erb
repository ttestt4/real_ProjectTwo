<h1>NEW EXERCISE</h1>

<div class="row">

<%= form_for [@user, @workout, @exercise], :html => {:class => "form-horizontal col-xs-6 col-sm-6 col-md-6"} do |f| %>
<hr>
	<div class="form-group">
		<%= f.label :'Exercise Name' %>
		<%= f.text_field :title, :class=>"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :Notes %>
		<%= f.text_field :notes, :class=>"form-control" %>
	</div>
	
	<div class="form-group">
		<%=f.label :Video %>
		<%=f.text_field :video, :class=>"form-control", :id=>"pipeme"%>
	</div>

	<div class="form-group">
		<%= f.submit "ADD EXERCISE", :class => "btn btn-primary" %>
		<%= link_to 'Back to ' + @workout.description, user_workout_exercises_path, :class => "btn btn-secondary" %>
	</div>
<% end %>
