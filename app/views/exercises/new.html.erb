<div class="row">

<%= form_for [@user, @workout, @exercise], :html => {:class => "form-horizontal col-sm-4"} do |f| %>
<hr>
	<div class="form-group">
		<%= f.label :'Exercise Name' %>
		<%= f.text_field :title, :class=>"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :Notes %>
		<%= f.text_field :notes, :class=>"form-control" %>
	</div>
	
	<div class="form-group">
		<%=f.label :Video %>
		<%=f.text_field :video, :class=>"form-control"%>
	</div>



	<div class="form-group">
		<%= f.submit "NEW EXERCISE", :class => "btn btn-primary" %>
	</div>
<% end %>

</div>
<%= link_to 'Back To All Exercises', user_workout_exercises_path %>

