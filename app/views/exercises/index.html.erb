

<% if current_user != @user %>
   <p> You cannot view other users information </p>
<% else %>





	<h1><i><%= @workout.description %>
	<br>
		<%= @workout.date %>
	</i>
	</h1>

	<h3>
		<%= link_to 'Add Exercise', new_user_workout_exercise_path(params[:user_id], @workout.id) %>
		&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		<%= link_to 'Back To My Workouts', user_workouts_path %>
	</h3>
<br>
	<% @exercises.each do |e| %>
	<p>
	


<div class="re-size">		
	<video src="<%= e.video %>" class="video-size" controls></video>
	<div class="center-text">
		<%= e.title %> &nbsp;&nbsp;&nbsp; 

   		<br>
   		<%= e.notes %> &nbsp;&nbsp;&nbsp; 
   	<br>
   		<%= link_to 'Edit Exercise', edit_user_workout_exercise_path(params[:user_id], @workout.id, e.id), :class => "btn btn-info" %>
   		<%= link_to 'Delete Exercise', user_workout_exercise_path(params[:user_id], @workout.id, e.id), method: :delete, data: { confirm: 'Are you sure you permanently delete this exercise?'}, :class => "btn btn-danger" %>
   	<br><br>
	</p> 
	<% end %>


	</div>
</div>



<%end%>
